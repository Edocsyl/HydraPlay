{
	"hydraplay": {
	    "port": 8080
	},
	"mopidy":{
		"mpd_base_port": 6600,
		"web_base_port": 6680,
		"instances": 2,
		"config_path": "/etc/mopidy/",
		"extensions":{
			"spotify":{
				"enable": false,
				"username": "<username>",
				"password": "<password>",
				"client_id": "<client_id>",
				"client_secret": "<client_secret>"
			},
			"tunein":{
				"enable": true,
				"timeout": 5000
			}
		}
	},
	"snapcast_server":{
		"config_path": "/etc/snapcast/",
		"server_port": 1704,
		"remote_port": 1705,
		"additional_fifos":[]
	}
}